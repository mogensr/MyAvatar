<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>MyAvatar Portal – Dashboard</title>

  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  />

  <!-- React UMD -->
  <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>

  <!-- Babel (kun til JSX i myavatar-dashboard.js) -->
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

  <!-- Lucide icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <!-- Her mountes React -->
  <div id="root">
    <!-- React vil mounte indhold her -->
  </div>

  <!-- Backend-injektion af initial props -->
  <script>
    window.INITIAL_USER = {
      name: "{{ user.name }}",
      email: "{{ user.email }}"
    };
    window.INITIAL_ORG = {
      name: "{{ organization.name }}",
      contact: {
        email: "{{ organization.contact_email }}",
        phone: "{{ organization.contact_phone }}"
      }
    };
  </script>

  <!-- Dine almindelige JS-filer -->
  <script src="{{ url_for('static', path='js/app-config.js') }}"></script>
  <script src="{{ url_for('static', path='js/api-service.js') }}"></script>
  <script src="{{ url_for('static', path='js/audio-recorder.js') }}"></script>

  <!-- Én React-fil, som indeholder både komponent og mount -->
  <script
    type="text/babel"
    src="{{ url_for('static', path='js/myavatar-dashboard.js') }}"
  ></script>

  <!-- Initialize React component when DOM is ready -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const root = ReactDOM.createRoot(document.getElementById('root'));
      root.render(
        <Dashboard 
          initialUser={window.INITIAL_USER}
          initialOrg={window.INITIAL_ORG}
        />
      );
    });
  </script>
</body>
</html>



